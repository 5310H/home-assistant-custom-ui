{
  "extends": "airbnb-base",
  "globals": {
    "__DEV__": false,
    "__DEMO__": false,
    "Polymer": true,
    "StateCardDisplay": true,
    "CuiBaseElement": true,
  },
  "env": {
    "browser": true
  },
  "rules": {
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": [ 2, {"allowForLoopAfterthoughts": true }],
    "no-bitwise": 0,
    "no-param-reassign": ["error", { "props": false }],
    "function-paren-newline": 0,
  },
  "plugins": [
    "html",
    "import"
  ],
}
